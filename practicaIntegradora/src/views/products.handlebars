<div class="listarProds">
  {{#each products}}
    <div class="divProd">
      <h2>{{title}}</h2>
      <p>{{description}}</p>
      <p>Precio: {{price}}</p>
      <p>Categor√≠a: {{category}}</p>
      <a href="/api/detail/{{_id}}">Ver detalles</a>
      <form action="/cart/" method="post">
        <input type="hidden" name="productId" value="{{_id}}" />
        <button type="submit">Agregar al carrito</button>
      </form>
    </div>
  {{/each}}
</div>

<div class="pagination">
  {{#if totalPages}}
    {{#if hasPrevPage}}
      <a href="/api/products?page={{prevPage}}">&laquo; Anterior</a>
    {{else}}
      <span class="disabled">&laquo; Anterior</span>
    {{/if}}

    {{#each paginationPages}}
      {{#if this.isCurrent}}
        <span class="current-page">{{this.page}}</span>
      {{else}}
        <a href="/api/products?page={{this.page}}">{{this.page}}</a>
      {{/if}}
    {{/each}}

    {{#if hasNextPage}}
      <a href="/api/products?page={{nextPage}}">Siguiente &raquo;</a>
    {{else}}
      <span class="disabled">Siguiente &raquo;</span>

    {{/if}}
  {{/if}}
</div>